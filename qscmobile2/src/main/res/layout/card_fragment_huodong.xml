<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <FrameLayout
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/card_huodong_content1"
            android:textSize="20sp"
            android:singleLine="true"
            android:layout_marginRight="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书释绿色*传递未来  课本循环利用啊！！" />

        <TextView
            android:id="@+id/card_huodong_icon1"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="@string/icon_heart" />

        <TextView
            android:id="@+id/card_huodong_count1"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="530" />

    </FrameLayout>
    <View
        android:layout_width="match_parent" 
        android:layout_height="2dp"
        android:background="@color/list_even"
        />
    
    <FrameLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/card_huodong_content2"
            android:textSize="20sp"
            android:singleLine="true"
            android:layout_marginRight="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="社科徽章设计征集大赛" />

        <TextView
            android:id="@+id/card_huodong_icon2"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="@string/icon_heart" />

        <TextView
            android:id="@+id/card_huodong_count2"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="530" />

    </FrameLayout>
    
    <View
        android:layout_width="match_parent" 
        android:layout_height="2dp"
        android:background="@color/list_even"
        />
    
    <FrameLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/card_huodong_content3"
            android:textSize="20sp"
            android:singleLine="true"
            android:layout_marginRight="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="觉醒自我的三个层面主题讲座" />

        <TextView
            android:id="@+id/card_huodong_icon3"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"
            android:text="@string/icon_heart" />

        <TextView
            android:id="@+id/card_huodong_count3"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:text="530" />

    </FrameLayout>

</LinearLayout>
