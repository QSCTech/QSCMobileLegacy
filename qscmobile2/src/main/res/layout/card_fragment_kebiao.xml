<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_fragment_kebiao_big"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/card_view_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_fragment_kebiao_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离上课还有" />

    <TextView
        android:id="@+id/card_fragment_kebiao_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:singleLine="true"
        android:textColor="@color/blue_text" />

    <TextView
        android:id="@+id/card_fragment_kebiao_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="马克思主义基本原理概论" />

    <TextView
        android:id="@+id/card_fragment_kebiao_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="金建伟" />

    <TextView
        android:id="@+id/card_fragment_kebiao_time"
        android:textColor="@color/blue_text"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="周二6/7/8" />

    <TextView
        android:id="@+id/card_fragment_kebiao_place"
        android:textColor="@color/blue_text"
        android:textSize="17sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="紫金港 西1-105" />

</LinearLayout>
