<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notice_bar_pic"
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="封面图片"
            android:textColor="@color/blue_text" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/notice_bar_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="left|center_vertical"
                android:text="Notice 产品发布会"
                android:textColor="@color/blue_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notice_bar_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notice_bar_name"
                android:layout_below="@+id/notice_bar_name"
                android:layout_marginTop="7dp"
                android:text="时间："
                android:textColor="@color/blue_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notice_bar_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/notice_bar_time"
                android:text="从 2013年6月2日 12:00"
                android:textColor="@color/blue_text"
                android:layout_alignTop="@+id/notice_bar_time" />

            <TextView
                android:id="@+id/notice_bar_place_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="地点："
                android:textColor="@color/blue_text"
                android:textStyle="bold"
                android:layout_below="@+id/notice_bar_starttime"
                android:layout_alignLeft="@+id/notice_bar_time" />

            <TextView
                android:id="@+id/notice_bar_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/notice_bar_place_temp"
                android:layout_alignLeft="@+id/notice_bar_starttime"
                android:singleLine="true"
                android:text="小剧场B座217室"
                android:textColor="@color/blue_text" />

            <TextView
                android:id="@+id/notice_bar_category_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notice_bar_name"
                android:layout_below="@+id/notice_bar_place_temp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="类型：" />

            <TextView
                android:id="@+id/notice_bar_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/notice_bar_category_temp"
                android:layout_alignLeft="@+id/notice_bar_starttime"
                android:singleLine="true"
                android:text="其他" />

            <TextView
                android:id="@+id/notice_bar_sponsor_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notice_bar_name"
                android:layout_below="@+id/notice_bar_category_temp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="举办：" />

            <TextView
                android:id="@+id/notice_bar_sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/notice_bar_sponsor_temp"
                android:layout_alignLeft="@+id/notice_bar_starttime"
                android:text="求是潮" />

            <TextView
                android:id="@+id/notice_bar_rating_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notice_bar_name"
                android:layout_below="@+id/notice_bar_sponsor_temp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="评分：" />

            <TextView
                android:id="@+id/notice_bar_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/notice_bar_rating_temp"
                android:layout_alignLeft="@+id/notice_bar_starttime"
                android:text="4.0" />

            <TextView
                android:id="@+id/notice_bar_tag_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/notice_bar_name"
                android:layout_below="@+id/notice_bar_rating_temp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="标签：" />

            <TextView
                android:id="@+id/notice_bar_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/notice_bar_tag_temp"
                android:layout_alignLeft="@+id/notice_bar_starttime" />


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/notice_bar_content_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="活动详情"
        android:textStyle="bold"
        android:textColor="@color/blue_text" />

    <TextView
        android:id="@+id/notice_bar_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp" />
</LinearLayout>
