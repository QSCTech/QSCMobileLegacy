<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/card_view_padding"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/notice_card_relative1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="22dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/notice_card_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/notice_card_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name1"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/notice_card_rating1"
            android:text="@string/icon_star" />

        <TextView
            android:id="@+id/notice_card_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name1"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice_card_relative2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="22dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/notice_card_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/notice_card_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name2"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/notice_card_rating2"
            android:text="@string/icon_star" />

        <TextView
            android:id="@+id/notice_card_rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name2"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice_card_relative3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingRight="22dp"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/notice_card_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/notice_card_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name3"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/notice_card_rating3"
            android:text="@string/icon_star" />

        <TextView
            android:id="@+id/notice_card_rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/notice_card_name3"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>