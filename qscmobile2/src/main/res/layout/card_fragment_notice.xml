            android:id="@+id/notice_card_star2"
            android:layout_alignBaseline="@+id/notice_card_name2"
            android:layout_toLeftOf="@+id/notice_card_rating2"
            android:layout_marginRight="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/notice_card_rating2"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@+id/notice_card_name2" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_card_relative3"
        android:paddingLeft="22dp"
